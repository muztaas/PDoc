<Window x:Class="PDoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PDoc"
        Title="PDoc - Word to PDF Converter" Height="450" Width="800">
    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToCollapsedConverter"/>
        <local:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
        <local:CompletedToVisibilityConverter x:Key="CompletedToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Select Word documents to convert to PDF" Margin="0,0,0,10"/>
            <Button Content="Select Files" Command="{Binding SelectFilesCommand}" 
                    HorizontalAlignment="Left" Padding="10,5"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <ListBox Grid.Row="0" ItemsSource="{Binding Files}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                                <TextBlock Text=" - " VerticalAlignment="Center" Margin="5,0"
                                         Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}"/>
                                <TextBlock VerticalAlignment="Center" Margin="0,0,5,0"
                                         Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Converting">
                                                    <Setter Property="Text" Value="Converting..."/>
                                                    <Setter Property="Foreground" Value="Blue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                    <Setter Property="Text" Value="Done"/>
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                    <Setter Property="Text" Value="Failed"/>
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"
                                         Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,5,0,0"
                                      Visibility="{Binding Status, Converter={StaticResource CompletedToVisibilityConverter}}">
                                <TextBlock Text="PDF: " Foreground="#666666"/>
                                <TextBlock Text="{Binding PdfPath}" Foreground="#666666"/>
                                <Button Content="Open PDF" Margin="10,0"
                                        Command="{Binding OpenPdfCommand}"/>
                                <Button Content="Open Folder"
                                        Command="{Binding OpenFolderCommand}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,5,0,0"
                     Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"/>
        </Grid>

        <Button Grid.Row="2" Content="Convert to PDF" Command="{Binding ConvertCommand}" 
                HorizontalAlignment="Right" Padding="20,10">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsConverting}" Value="True">
                            <Setter Property="Content" Value="Converting..."/>
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
