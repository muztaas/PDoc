<Window x:Class="PDoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PDoc"
        Title="PDoc2 - Word to PDF Converter"
        Height="600" Width="900"
        MinHeight="300" MinWidth="450"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Icon="/Images/pdoc-logo.png">
    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToCollapsedConverter"/>
        <local:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
        <local:StatusToHiddenVisibilityConverter x:Key="StatusToHiddenVisibilityConverter"/>
        <local:CompletedToVisibilityConverter x:Key="CompletedToVisibilityConverter"/>
        <!-- Button Style -->
        <Style x:Key="MaterialButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- ListBox Item Style -->
        <Style x:Key="MaterialListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SelectFilesButtonStyle" BasedOn="{StaticResource MaterialButton}" TargetType="Button">
    <Setter Property="Background" Value="White"/>
    <Setter Property="Foreground" Value="#2196F3"/>
    <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
            <Setter Property="Background" Value="#E3F2FD"/> <!-- Slightly darker than white -->
        </Trigger>
        <Trigger Property="IsFocused" Value="True">
            <Setter Property="Background" Value="#BBDEFB"/> <!-- Even darker on focus -->
        </Trigger>
    </Style.Triggers>
</Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="PDoc2" FontSize="34" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="Word to PDF Converter" FontSize="18" Foreground="White" Opacity="0.87" HorizontalAlignment="Center" Margin="0,4,0,20"/>
                <Button Content="Select Files" Command="{Binding SelectFilesCommand}" Style="{StaticResource SelectFilesButtonStyle}" MinWidth="180"/>

            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="32,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="True">
                <CheckBox DockPanel.Dock="Top" Content="Select All Files" IsChecked="{Binding AreAllFilesSelected}" Margin="16,0,0,10"/>
                <ListBox ItemsSource="{Binding Files}" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding FileName}" VerticalAlignment="Center" FontSize="16"/>
                                    <TextBlock Text=" - " VerticalAlignment="Center" Margin="5,0" Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}"/>
                                    <TextBlock VerticalAlignment="Center" Margin="0,0,5,0" Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Converting">
                                                        <Setter Property="Text" Value="Converting..."/>
                                                        <Setter Property="Foreground" Value="Blue"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                        <Setter Property="Text" Value="Done"/>
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Text" Value="Failed"/>
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Save Location Button -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="30,8,0,0" HorizontalAlignment="Right" Visibility="Visible">
                                    <TextBlock Text="Save Location: " Foreground="#666666"/>
                                    <TextBlock Text="{Binding CustomPdfPath, TargetNullValue='Same as Word file'}" Foreground="#666666"/>
                                    <Button Content="Change"
                                            Command="{Binding DataContext.SelectSaveLocationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialButton}"
                                            Margin="10,0,20,0"
                                            MinWidth="100"
                                            Height="30"
                                            Padding="12,6"/>
                                </StackPanel>

                                <!-- PDF File Info -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="30,8,0,0" HorizontalAlignment="Right" Visibility="{Binding Status, Converter={StaticResource CompletedToVisibilityConverter}}">
                                    <TextBlock Text="PDF: " Foreground="#666666" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TruncatedPdfPath}" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,10,0" Visibility="{Binding TruncatedPdfPath, Converter={StaticResource NullToCollapsedConverter}}"/>
                                    <Button Content="Open PDF" Command="{Binding OpenPdfCommand}" Style="{StaticResource MaterialButton}" Margin="0,0,8,0" MinWidth="140" Padding="12,6"/>
                                    <Button Content="Open Folder" Command="{Binding OpenFolderCommand}" Style="{StaticResource MaterialButton}" MinWidth="140" Padding="12,6" Margin="0,0,20,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MaterialListBoxItem}" TargetType="ListBoxItem"/>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </DockPanel>

            <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,12,0,0" HorizontalAlignment="Center" Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"/>
        </Grid>

        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="32,16">
            <Button Content="Convert to PDF" Command="{Binding ConvertCommand}" HorizontalAlignment="Center" MinWidth="240">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConverting}" Value="True">
                                <Setter Property="Content" Value="Converting..."/>
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Window>
